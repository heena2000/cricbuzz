@page
@model cricbuzz.TestRankings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add New Test Ranking</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestRanking.PlayerName" class="control-label"></label>
                <input asp-for="TestRanking.PlayerName" class="form-control" />
                <span asp-validation-for="TestRanking.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestRanking.Rating" class="control-label"></label>
                <input asp-for="TestRanking.Rating" class="form-control" />
                <span asp-validation-for="TestRanking.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestRanking.CountryId" class="control-label"></label>
                <select asp-for="TestRanking.CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">View Test Rankings</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
